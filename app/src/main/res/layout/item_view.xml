<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- ID Row -->
    <TextView
        android:id="@+id/itemID_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="מספר מזהה:"
        android:textSize="20sp"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/itemID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12345"
        android:textSize="20sp"
        android:layout_toEndOf="@id/itemID_txt"
        android:layout_marginStart="8dp"
        android:layout_alignBaseline="@id/itemID_txt" />

    <!-- Latitude Row -->
    <TextView
        android:id="@+id/itemLatitude_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="קו רוחב:"
        android:textSize="20sp"
        android:layout_below="@id/itemID_txt"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/itemLatitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="32.0853"
        android:textSize="20sp"
        android:layout_toEndOf="@id/itemLatitude_txt"
        android:layout_marginStart="8dp"
        android:layout_alignBaseline="@id/itemLatitude_txt" />

    <!-- Longitude Row -->
    <TextView
        android:id="@+id/itemLongitude_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="קו אורך:"
        android:textSize="20sp"
        android:layout_below="@id/itemLatitude_txt"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/itemLongitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="34.7818"
        android:textSize="20sp"
        android:layout_toEndOf="@id/itemLongitude_txt"
        android:layout_marginStart="8dp"
        android:layout_alignBaseline="@id/itemLongitude_txt" />

    <!-- Accessible Row -->
    <TextView
        android:id="@+id/itemAccessible_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="נגישות:"
        android:textSize="20sp"
        android:layout_below="@id/itemLongitude_txt"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/itemAccessible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:textSize="20sp"
        android:layout_toEndOf="@id/itemAccessible_txt"
        android:layout_marginStart="8dp"
        android:layout_alignBaseline="@id/itemAccessible_txt" />

    <!-- Quantity Row -->
    <TextView
        android:id="@+id/itemQuantity_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="כמות אנשים מקסימלית:"
        android:textSize="20sp"
        android:layout_below="@id/itemAccessible_txt"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/itemQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25"
        android:textSize="20sp"
        android:layout_toEndOf="@id/itemQuantity_txt"
        android:layout_marginStart="8dp"
        android:layout_alignBaseline="@id/itemQuantity_txt" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/itemQuantity_txt"
        android:layout_marginTop="12dp"
        android:background="#9F9999"/>
</RelativeLayout>
