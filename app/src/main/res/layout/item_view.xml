<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/itemID"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="10dp"
        android:textSize="20dp"
        tools:text="ID" />

    <TextView
        android:id="@+id/itemLatitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/itemID"
        android:textColor="@color/black"
        tools:text="latitude"
        />
    <TextView
        android:id="@+id/itemLongtitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/itemID"
        android:layout_below="@id/itemLatitude"
        android:textColor="@color/black"
        tools:text="longitude"
        />

    <TextView
        android:id="@+id/itemAccessible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/itemID"
        android:layout_below="@id/itemLongtitude"
        android:textColor="@color/black"
        tools:text="accessible"
        />
    <TextView
        android:id="@+id/itemQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/itemID"
        android:layout_below="@id/itemAccessible"
        android:textColor="@color/black"
        tools:text="quantity"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#9F9999"
        android:layout_below="@id/itemQuantity"
        android:layout_marginTop="10dp"
        ></LinearLayout>


</RelativeLayout>