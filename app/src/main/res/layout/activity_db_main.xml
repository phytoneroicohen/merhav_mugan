<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DB_Main">


    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Name"
        />

    <EditText
        android:id="@+id/lentitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="letitude"
        />
    <EditText
        android:id="@+id/longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="longitude"
        />

    <EditText
        android:id="@+id/etAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Age"
        />

    <EditText
        android:id="@+id/etGrades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Grades"
        />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Student" />

    <EditText
        android:id="@+id/edDeleteID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Student ID to delete"
        android:inputType="text"
        />

    <Button
        android:id="@+id/btnDeleteID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete student" />

    <EditText
        android:id="@+id/edStdntUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Student ID to update"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/etGradesUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Student new Grades"
        android:inputType="text"
        />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update student Grades" />


    <Button
        android:id="@+id/buttonshowingall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button show all" />




</LinearLayout>